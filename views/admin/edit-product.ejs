<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="<%= path %>" method="POST" enctype="multipart/form-data">
            <% for (error in errors) { %>
                <p class="error-message"><%= errors[error].msg %></p>
            <% } %>
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (path == '/admin/add-product') {%><%= oldInput.title %><%} else {%><%= product.title %><%} %>">
            </div>
            <div class="form-control">
                <label for="image">Image</label>
                <input type="file" name="image" id="image">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<% if (path == '/admin/add-product') { %><%= oldInput.price %><% } else {%><%= product.price %><%} %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if (path == '/admin/add-product') {%><%= oldInput.description %><%} else {%><%= product.description %><%} %></textarea>
            </div>

            <input type="hidden" name="token" value="<%= token %>">
            <button class="btn" type="submit"><% if (path == '/admin/add-product') { %>Add Product<% } else { %>Edit Product<% } %> </button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>


